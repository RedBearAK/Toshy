[Unit]
Description=Toshy Config Service
Wants=default.target
After=default.target

[Service]
ExecStartPre=/bin/bash -c 'for i in {1..5}; do if xset -q &> /dev/null; then break; else sleep $((2**i)); fi; done'
ExecStart=/usr/bin/bash -c 'env TERM=xterm /home/$USER/.config/toshy/scripts/toshy-service-config.sh'
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
